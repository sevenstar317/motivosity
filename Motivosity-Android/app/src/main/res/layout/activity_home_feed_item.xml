<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/feedAvatarImg"
            android:src="@drawable/ic_cart"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/feedAvatarImg"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donna Meagle"
                android:id="@+id/nameText"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="false"
                android:textColor="#57BFE3"
                android:minLines="2"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="yesterday"
                android:id="@+id/dateText"
                android:textColor="@color/Gray"
                android:layout_alignBottom="@+id/nameText"
                android:layout_alignParentStart="false"
                android:layout_marginTop="0dp"
                android:textSize="15dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="0.4"
            android:gravity="center|center_vertical"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:id="@+id/feedIconWrapper">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/feedIcon"
                android:adjustViewBounds="false" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:id="@+id/titleText"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="#2C7398" />
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/feedTitle"
        android:textColor="@color/Gray"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="0 likes"
            android:id="@+id/numberOfLikes"
            android:layout_weight="0.5"
            android:textColor="@color/Gray"
            android:textAlignment="center"
            android:gravity="bottom"
            android:paddingBottom="5dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="0 comments"
            android:id="@+id/numberOfComments"
            android:layout_weight="0.5"
            android:textColor="@color/Gray"
            android:textAlignment="center"
            android:gravity="bottom"
            android:paddingBottom="5dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="Like"
            android:id="@+id/likeTextView"
            android:layout_weight="0.5"
            android:background="#F2F2F2"
            android:textColor="#5DB4DC"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textStyle="bold" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:id="@+id/textView24"
            android:background="@color/Gray"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="Comment"
            android:id="@+id/commentTextView"
            android:layout_weight="0.5"
            android:background="#F2F2F2"
            android:textColor="#5DB4DC"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal"
        android:background="#2C7398"></LinearLayout>

</LinearLayout>